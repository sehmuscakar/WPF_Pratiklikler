<Window x:Class="login2.loginekranı"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:login2"
        mc:Ignorable="d"
        Title="loginekranı" Height="300" Width="300" FontSize="14" Background="#04c582" >
    <Border Background="#2e3137" CornerRadius="20" Margin="20" >
        <StackPanel Margin="10" >
            <Label Content="Login" Foreground="White" FontSize="25" HorizontalAlignment="Center" ></Label>
            <Separator></Separator>
            <Label Content="username" Foreground="White" ></Label>
            <TextBox x:Name="txtusername" Background="#545d6a" Foreground="White" FontSize="18" ></TextBox>
            <Label Content="password" Foreground="White" ></Label>
            <PasswordBox x:Name="txtpassword" Background="#545d6a" Foreground="White" FontSize="18" ></PasswordBox>
            <Button Click="btnsubmit_Click" Margin="60,10" Content="submit" x:Name="btnsubmit" Background="#545d6a" Foreground="White" FontSize="18"></Button>
        </StackPanel>
    </Border>
</Window>
