<Window x:Class="Grids.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Grids"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/> <!--burda sutun yeri açılır,sutun width ile açılır -->
            <ColumnDefinition Width="2*"/> <!-- 1* 100 lük düşün 2* olursa 200 luk olarak düşün -->
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" /> <!-- satırda height ile oluyor -->
            <RowDefinition Height="100" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        
        <Button Grid.Column="0" Grid.Row="0"  > buton 00</Button> <!--burda hangi rakamı versen o rdaki sutunu seçer -->
        <Button Grid.Column="1" Grid.Row="1"  >buton 01</Button>
        <Button Grid.Column="2" Grid.Row="2"  >buton 02</Button>
    </Grid>
</Window>
