<Window x:Class="Grids_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Grids_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Button Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Grid.RowSpan="2" Background="Aqua" >buton 1</Button>
        <!--Grid.RowSpan bu span özeliği birleştirme işlenmi yapıyor -->
        <Button Grid.Column="2" Grid.Row="0" >buton 3</Button>
      
  
        <Button Grid.Column="2" Grid.Row="1" >buton 6</Button>
        <Button Grid.Column="0" Grid.Row="2" >buton 7</Button>
        <Button Grid.Column="1" Grid.Row="2" >buton 8</Button>
        <Button Grid.Column="2" Grid.Row="2" >buton 9</Button> 
    </Grid>
</Window>
