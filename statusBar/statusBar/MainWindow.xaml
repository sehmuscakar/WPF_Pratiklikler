<Window x:Class="statusBar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:statusBar"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel LastChildFill="False" >
        <Button  DockPanel.Dock="Top" Click="Button_Click" >
            bu buton
        </Button>
        <StatusBar DockPanel.Dock="Bottom" >
            <StatusBarItem x:Name="buloading" >
                Loading...
            </StatusBarItem>
            <Separator>
                
            </Separator>
            <StatusBarItem>
                <ProgressBar x:Name="buprogressbar" Width="100" Height="15" Value="10" ></ProgressBar>
            </StatusBarItem>
        </StatusBar>
       
    </DockPanel>
</Window>
